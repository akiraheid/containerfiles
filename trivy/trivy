#!/bin/bash

backend=${CONTAINER_BACKEND:-podman}

app=trivy
image=docker.io/aquasec/${app}:latest

# Host directories
hcachedir=${XDG_CACHE_HOME:-$HOME/.cache}

mkdir -p "$hcachedir"

# XDG_CACHE_DIR access mode MUST be 700
# https://specifications.freedesktop.org/basedir/latest/
chmod 700 "$hcachedir"

# Container directories
chomedir=/root
ccachedir=${chomedir}/.cache

# Args for container runtime
hargs=("--name" "${app}-$(cat /proc/sys/kernel/random/uuid)")
hargs+=("--volume" "${hcachedir}/:${ccachedir}/:rw")
hargs+=("--rm")

# Arguments for the application
cargs=()
for token in "${@}"; do
	if [ -f "$token" ]; then
		hpath=$(readlink -f "${token}")

		# Remove leading slash
		noleading=$(echo "${hpath}" | cut -c2-)
		cpath=${chomedir}/${noleading}

		xdargs+=("--volume" "${hpath}:${cpath}:rw")
		cargs+=("${cpath}")
	elif [ -d "$token" ]; then
		hpath=$(readlink -f "${token}")

		# Remove leading slash
		noleading=$(echo "${hpath}" | cut -c2-)
		cpath=${chomedir}/${noleading}

		xdargs+=("--volume" "${hpath}/:${cpath}/:rw")
		cargs+=("${cpath}")
	else
		cargs+=("${token}")
	fi
done

"$backend" run "${xdargs[@]}" "$image" "${cargs[@]}"

"$backend" pull "$image" >/dev/null 2>&1
